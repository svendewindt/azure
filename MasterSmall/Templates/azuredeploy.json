{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Project Name": {
      "type": "string",
      "minLength": 5,
      "metadata": {
        "description": "Name for the project. This will be used to name other resources."
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "West Europe",
      "allowedValues": [ "East China", "East US2", "West Europe", "West Japan", "West US", "Southeast Asia" ],
      "metadata": {
        "description": "The location to rollout the project. This location must support premium storage."
      }
    },
    "Windows Domain name": {
      "type": "string",
      "minLength": 5,
      "metadata": {
        "description": "Name for the Windows domain."
      }
    },
    "domainAdmin": {
      "type": "string",
      "defaultValue": "adminSVDW",
      "metadata": {
        "description": "Name for the domain administrator."
      }
    },
    "domainAdminPassword": {
      "type": "securestring",
      "minLength": 8,
      "metadata": {
        "description": "Password for the domain administrator"
      }
    },

    "DCWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "Windows version for the domain controller."
      }
    },

    "DCSize": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "allowedValues": [
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_D1",
        "Standard_D2",
        "Standard_D3",
        "Standard_D4",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2"
      ],
      "metadata": {
        "desciption": "Size of the domain controller."
      }
    },

    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    },
    "DCTemplateFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "template location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "DCTemplateFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the nested template file"
      }
    }
  },
  "variables": {
    "StandardStorageAccountName": "[tolower(concat('standard',parameters('Project Name')))]",
    "StandardStorageAccountType": "Standard_LRS",
    "StandardStorageAccountDisplayName": "StandardStorageAccount",
    "PremiumStorageAccountName": "[tolower(concat('prem' ,parameters('Project Name')))]",
    "PremiumStorageAccountType": "Premium_LRS",
    "PremiumStorageAccountDisplayName": "PremiumStorageAccount",
    "VNetName": "VNet",
    "VNetPrefix": "172.16.0.0/16",
    "VNetSubnet1Name": "DCs",
    "VNetSubnet1Prefix": "172.16.0.0/24",
    "VNetSubnet2Name": "Servers",
    "VNetSubnet2Prefix": "172.16.1.0/24",
    "DC01Name": "[concat(parameters('Project Name'),'DC01')]"

  },
  "resources": [
    {
      "name": "[variables('StandardStorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[parameters('Location')]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "[variables('StandardStorageAccountDisplayName')]"
      },
      "properties": {
        "accountType": "[variables('StandardStorageAccountType')]"
      }
    },
    {
      "name": "[variables('PremiumStorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[parameters('Location')]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "[variables('PremiumStorageAccountDisplayName')]"
      },
      "properties": {
        "accountType": "[variables('PremiumStorageAccountType')]"
      }
    },
    {
      "name": "[variables('VNetname')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "[variables('VNetname')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('VNetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('VNetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('VNetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('VNetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('VNetSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "DC",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/',variables('VNetname'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('StandardStorageAccountName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('PremiumStorageAccountName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/svendewindt/azure/master/MasterSmall/Templates/deployDC.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Location": { "value": "[parameters('Location')]" },
          "StorageAccountName": { "value": "[variables('StandardStorageAccountName')]" },
          "Vnetname": { "value": "[variables('VNetname')]" },
          "VNetSubnet1Name": { "value": "[variables('VNetSubnet1Name')]" },
          "DCName": { "value": "[variables('DC01Name')]" },
          "DCAdminUserName": { "value": "[parameters('domainAdmin') ]" },
          "DCAdminPassword": { "value": "[ parameters('domainAdminPassword')]" },
          "DCWindowsOSVersion": { "value": "[parameters('DCWindowsOSVersion')]" },
          "DCSize": {"value": "[parameters('DCSize')]"}
        }
      }
    }
  ],
  "outputs": {
    "DCSize": {
      "type": "string",
      "value": "[parameters('DCSize')]"
    }

  }
}
