{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Location": { "type": "string" },
    "AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainName": {
      "type": "string",
      "minLength": 1
    },
    "AssetLocation": { "type": "string" }
  },
  "variables": {
    "InstallADConfigurationFunction": "InstallADConfiguration.ps1\\Main",
    "modulesUrl": "[concat(parameters('AssetLocation'),'/DSC/installDNS.zip')]",
    "configurationFunction": "[concat(parameters('AssetLocation'),'installDNS\\DNS')]"
  },
  "resources": [
    {
      "name": "InstallAD",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[parameters('Location')]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
      ],
      "tags": {
        "displayName": "InstallAD"
      },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "wmfVersion": "4.0",
          "modulesUrl": "[variables('modulesUrl')]",
          "configurationFunction": "[variables('configurationFunction')]",
          "properties": {

          }
        },
        "protectedSettings": {

        }
      }
    }

  ],
  "outputs": {
  }
